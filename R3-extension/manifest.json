{
  "manifest_version": 3,
  "name": "R3 - Record. Run. Repeat.",
  "version": "1.0.0",
  "description": "Record and replay web interaction workflows for regression testing",
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [],
  "web_accessible_resources": [
    {
      "resources": [
        "content/recorder.js",
        "content/player.js",
        "utils/selectors.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
